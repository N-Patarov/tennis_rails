<section class="breadcrumb-area bg-img bg-overlay jarallax" style="background-image: url(<%= asset_path 'tour2.jpg' %>);">
  <div class="container h-100">
    <div class="row h-100 align-items-center">
      <div class="col-12">
        <div class="breadcrumb-content">
          <h2>Ranking</h2>
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
              <li class="breadcrumb-item"> <%=link_to 'Начало', root_path %></li>
              <li class="breadcrumb-item active" aria-current="page">Ranking</li>
            </ol>
          </nav>
        </div>
      </div>
    </div>
  </div>
</section>

<p id="notice"><%= notice %></p>




<div class="limiter">
  <div class="container">
    <ul class="responsive-table">
      <h5 class="gladiators-info"></h5>
      <br>
      <h2> Сезон 2021 </h2>


      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Points</th>
          </tr>
        </thead>
        <tbody>
          <% @players.each.with_index(1) do |player, i| %>
            <tr>
              <th scope="row"><%= i %></th>
              <td><%= link_to player.name, player %></td>
              <td>Точки</td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <br>


  </div>
</div>
