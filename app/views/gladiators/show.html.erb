<div class="container">
  <p id="notice"><%= notice %></p>

  <div class='tour-details text-center'>
    <h5>
      <%= "Tournament #{@gladiator.title} starts at: #{@gladiator.start_date.strftime('%d-%b-%Y  | %H:%MÑ‡.')} (admin: #{@gladiator.admin.email})" %>
    </h5>

    <%= link_to 'Edit', edit_gladiator_path(@gladiator), class: 'btn btn-primary' %>

    <p>
    <strong>Description:</strong>
    <%= @gladiator.info %>
    </p>

  </div>

  <div class='tour-enrollment text-center'>
    <hr>
    <div class="table-responsive">
      <caption>Players enrolled</caption>
      <%= bootstrap_form_for @gladiator do |f| %>
        <%= f.collection_check_boxes(:player_ids, Player.all, :id, :name) do |b| %>
          <%= b.check_box %>

        <% end %>
        <%= f.submit %>
      <% end %>

      <table class="table">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Player</th>
            <th scope="col">Participaring?</th>
          </tr>
        </thead>
        <tbody>
          <%- @players.each.with_index(1) do |player, i| %>
            <tr>
              <th scope="row"><%= i %></th>
              <td><%= player.name %></td>
              <td>
                <%# <%= label_tag 'player' %>
                <%= check_box_tag(:enrolled, value = '1', checked = false)  %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
