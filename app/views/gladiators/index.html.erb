<p id="notice"><%= notice %></p>

<h1>Gladiators</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start date</th>
      <th>Info</th>
      <th>Admin</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gladiators.each do |gladiator| %>
      <tr>
        <td><%= gladiator.title %></td>
        <td><%= gladiator.start_date %></td>
        <td><%= gladiator.info %></td>
        <td><%= gladiator.admin.email.split('@')[0].capitalize %></td>
        <td><%= link_to 'Show', gladiator %></td>
        <td><%= link_to 'Edit', edit_gladiator_path(gladiator) %></td>
        <td><%= link_to 'Destroy', gladiator, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

